{
  "name": "fluttergpt",
  "displayName": "fluttergpt",
  "description": "Your AI assistant for Flutter Development",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "fluttergpt.apiKey": {
          "type": "string",
          "default": "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",
          "description": "OpenAI API Key"
        }
      }
    },
    "commands": [
      {
        "command": "fluttergpt.createWidget",
        "title": "FlutterGPT Create: Widget from Description"
      },
      {
        "command": "fluttergpt.createModelClass",
        "title": "FlutterGPT Create: Model Class from JSON"
      },
      {
        "command": "fluttergpt.createCodeFromBlueprint",
        "title": "FlutterGPT Create: Code from Blueprint"
      },
      {
        "command": "fluttergpt.refactorCode",
        "title": "FlutterGPT Refactor: From Instructions"
      },
      {
        "command": "fluttergpt.fixErrors",
        "title": "FlutterGPT Refactor: Fix Errors"
      },
      {
        "command": "fluttergpt.createRepoClassFromPostman",
        "title": "FlutterGPT Create: API Repository from Postman JSON"
      }
    ]
  },
  "menus": {
    "editor/context": [
        {
          "command": "fluttergpt.createWidget",
          "when": "editorHasSelection && resourceLangId == 'dart'",
          "group": "fluttergpt-menu-group@1"
        },
        {
            "command": "fluttergpt.refactorCode",
            "when": "editorHasSelection && resourceLangId == 'dart'",
            "group": "fluttergpt-menu-group@2"
        },
        {
          "command": "fluttergpt.fixErrors",
          "group": "navigation"
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "dotenv": "^16.0.3"
  }
}
